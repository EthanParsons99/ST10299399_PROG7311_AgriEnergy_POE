@{
    ViewData["Title"] = "Farmer Dashboard";
}

<body style="background-image: url('/images/vyeboombg3.jpg');
             background-size:cover;
             background-repeat: no-repeat;
             background-position: center;">
</body>

@*Farmer Dashboard for them to navigate from*@
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h2>Farmer Dashboard</h2>
                </div>
                <div class="card-body">
                    <p>Welcome to the Farmer Dashboard from here you are able to navigate to the function you would like to achieve</p>



                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        My Products
                                    </h5>
                                    <p class="card-text">View all products you have added.</p>
                                    <a asp-action="ViewMyProducts" asp-route-farmerId="@User.FindFirst("FarmerId")?.Value" class="btn btn-outline-success">View Products</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Add Product
                                    </h5>
                                    <p class="card-text">Add a new product</p>
                                    <a asp-action="AddProduct" class="btn btn-outline-success">Add new Product</a>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Marketplace
                                    </h5>
                                    <p class="card-text">View all products you have added.</p>
                                    <a asp-action="MarketPlace" class="btn btn-outline-success">Marketplace</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
