@model IEnumerable<ST10299399_PROG7311_GreenEnergy_POE.Models.Farmer>

<h1>Farmers List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Products</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.FarmerName</td>
                <td>
                    @foreach(var product in farmer.Products)
                    {
                        <div>
                            @product.ProductName
                        </div>
                    }
                
                </td>
            </tr>
        }
    </tbody>
</table>