@model List<Product>
@{
    ViewData["Title"] = "View Products";
}

<div class="container">
    <h2>Products</h2>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">Search and filter</h5>
        </div>

        <div class="card-body">
            <form asp-action="ViewProducts" method="get" class="row g-3">
                <div class="col mb-4">
                    <label class="form-label">Category</label>
                    <select name="searchCategory" class="form-select">
                        <option value="">All Categories</option>

                        @foreach(var category in ViewBag.Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" />
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a asp-action="ViewProducts" class="btn btn-outline-secondary">Clear Filters</a>
                </div>

            </form>
        </div>
    </div>

    <div class="mb-3 d-flex justify-content-between">
        <a asp-action="AddFarmer" class="btn btn-success">Add Farmer</a>
    </div>

    @if(Model.Count == 0)
    {
        <div class="alert alert-info">No Products</div>
    }
    else
    {
        <div> class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Farmer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var product in Model)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductPrice</td>
                            <td>@product.ProductDate.ToString("yyyy-MM-dd")</td>
                            <td>@product.ProductCategory</td>
                            <td>@product.Farmer.FarmerName @product.Farmer.FarmerSurname</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>