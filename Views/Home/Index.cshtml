@{
    ViewData["Title"] = "Home Page";
}
<body style="background-image: url('/images/vyeboombg.jpg');
             background-size:cover;
             background-repeat: no-repeat;
             background-position: center;">
</body>
@*Home page view if nobody is logged in*@
<div class="text-center white-text">
    <h1 class="display-4">Welcome to Agri-Energy Connect Platform</h1>
    <p class="lead">Connecting Farmers with energy markets for a sustainable future.</p>
</div>

<div class="container">
    <div class="row mt-5 justify-content-center">
        <div class="col-md-4">
             <div class="card shadow-sm h-100">
                 <div class="card-body">
                     <h5 class="card-title">Farmers</h5>
                        <p class="card-text">As a Farmer you are able to browse the marketplace and add your own products.</p>
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-success">Login as a Farmer</a>
                 </div>
             </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Employees</h5>
                    <p class="card-text">Employees are able to add new farmers and filter products.</p>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-success">Login as an Employee</a>
                </div>
            </div>
        </div>
    </div>
</div>
