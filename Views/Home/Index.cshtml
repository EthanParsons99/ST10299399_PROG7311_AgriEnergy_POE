@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Agri-Energy Connect Platform</h1>
    <p class="lead">Connecting agricultural producers with energy markets for a sustainable future.</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
         <div class="card shadow-sm h-100">
             <div class="card-body">
                 <h5 class="card-title">Farmers</h5>
                    <p class="card-text">Farmers can register, manage their profiles, and add products.</p>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-success">Login as Farmer</a>
             </div>
         </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">Employees</h5>
                <p class="card-text">Emplyees can manage farmer accounts and oversee products</p>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-success">Login as Employee</a>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">About</h5>
                <p class="card-text">Learn more about green energy</p>
                <a asp-controller="Home" asp-action="Privacy" class="btn btn-outline-success">Learn More</a>
            </div>
        </div>
    </div>


</div>